{
  "name": "serverless-ide",
  "displayName": "serverless-ide",
  "description": "Language Server for the serverless framework",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.44.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Serverless Language Server Configuration",
      "properties": {
        "slsLanguageServer.showYAMLError": {
          "scope": "window",
          "type": "boolean",
          "default": true
        },
        "slsLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "messages",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "activationEvents": [
    "workspaceContains:serverless.yml",
    "onLanguage:yaml",
    "onLanguage:yml",
    "onFileSystem:file://serverless.yml"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write \"**/*.{md,yaml,yml,js,ts,json}\"",
    "pretest": "npm run compile && npm run lint",
    "test": "LOG_LEVEL=debug jest",
    "prebuild": "rm -rf dist",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "qa": "npm run lint:fix && npm run format && npm run test"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.44.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "ajv": "^6.12.0",
    "await-to-js": "^2.1.1",
    "flat": "^5.0.0",
    "lodash": "^4.17.15",
    "vscode-languageclient": "^6.1.3",
    "vscode-languageserver": "^6.1.1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "yaml": "^1.9.2",
    "yaml-source-map": "^2.1.1"
  },
  "author": "ChimiDEV <ChimiDEV@gmail.com>"
}
